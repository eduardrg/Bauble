<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="com.bauble_app.bauble.create.CreateFragment">
        <RelativeLayout
            android:id="@+id/record_root_viewgroup"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

                <FrameLayout
                    android:id="@+id/create_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

                <FrameLayout
                    android:id="@+id/create_set_meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/create_reply"/>

                <FrameLayout
                    android:id="@+id/create_tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/create_set_meta"/>

        </RelativeLayout>
</ScrollView>