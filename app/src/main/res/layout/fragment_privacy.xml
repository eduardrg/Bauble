<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

    <com.bauble_app.bauble.CustomText
        android:id="@+id/privacy_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <com.bauble_app.bauble.CustomText
        android:id="@+id/privacy_page_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who should have access to your story?"
        android:layout_below="@id/privacy_page_title"
        android:layout_marginBottom="25dp"
        android:textAlignment="textStart"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:id="@+id/privacy_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacy_page_desc"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/privacy_seek_bar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only me"
        android:layout_below="@id/privacy_seek_bar"/>

</RelativeLayout>