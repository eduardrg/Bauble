<RelativeLayout
        android:id="@+id/record_root_viewgroup"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bauble_app.bauble.create.CreateFragment">
        <ImageButton
            android:id="@+id/record_placeholder"
            android:layout_width="233dp"
            android:layout_height="204dp"
            android:src="@drawable/place_holder_img"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/record_story_title"
            android:layout_below="@id/record_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pupi pls"
            android:textAlignment="center"
            android:textSize="@dimen/section_title_textsize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/record_story_author"
            android:layout_below="@id/record_story_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by eduard-the-g"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/record_wave_forms"
            android:layout_below="@+id/record_story_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wave_forms"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>


</RelativeLayout>