<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">
    <com.bauble_app.bauble.CustomText
        android:id="@+id/tag_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tag_page_title"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="25dp"/>

    <com.bauble_app.bauble.CustomText
        android:id="@+id/tag_page_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tag_page_desc"
        android:layout_below="@id/tag_page_title"
        android:layout_centerHorizontal="true"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layout_marginBottom="25dp"/>

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group1"
        style="@style/TagGroup"
        android:layout_below="@id/tag_page_desc"
        android:layout_marginBottom="25dp"
        app:atg_isAppendMode="true"/>

    <com.bauble_app.bauble.CustomText
        android:id="@+id/tag_search_title2"
        android:layout_below="@id/tag_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Find Tags"
        android:layout_marginBottom="15dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tag_search_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_search_title2"
        android:layout_marginBottom="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for tags..."/>

    </android.support.design.widget.TextInputLayout>

    <com.bauble_app.bauble.CustomText
        android:id="@+id/tag_suggested_title2"
        android:layout_below="@id/tag_search_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Suggested Tags"
        android:layout_marginBottom="30dp"/>

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group2"
        style="@style/TagGroup"
        android:layout_below="@id/tag_suggested_title2"/>
</RelativeLayout>