<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_gradient"
    android:padding="@dimen/listitem_feed_padding"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/feed_listitem_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/feed_listitem_picture"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/feed_listitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="@dimen/section_title_textsize"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/feed_listitem_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="author"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/feed_listitem_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_margin="@dimen/listitem_feed_stat_margin"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_stat_chains"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp" />
            <TextView
                android:id="@+id/feed_listitem_chains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chains"
                android:layout_margin="@dimen/listitem_feed_stat_margin" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_stat_time"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"/>
            <TextView
                android:id="@+id/feed_listitem_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expire"
                android:layout_margin="@dimen/listitem_feed_stat_margin"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_stat_plays"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"/>
            <TextView
                android:id="@+id/feed_listitem_plays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plays"
                android:layout_margin="@dimen/listitem_feed_stat_margin"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
